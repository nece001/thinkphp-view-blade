{
    "name": "nece001/thinkphp-view-blade",
    "description": "thinkphp视图blade模板引擎驱动",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "think\\view\\driver\\": "src/"
        },
        "files": [
            "src/function.php"
        ]
    },
    "authors": [
        {
            "name": "nece001",
            "email": "nece001@163.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "illuminate/view": "*",
        "phpoption/phpoption": "*",
        "vlucas/phpdotenv": "^5.6"
    },
    "extra": {
        "think": {
            "services": [
                "Nece\\Gears\\Infrastructure\\Service"
            ],
            "config": {
                "blade": "src/config/blade.php"
            }
        }
    }
}
